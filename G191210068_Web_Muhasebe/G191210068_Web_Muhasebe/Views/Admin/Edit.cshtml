@model G191210068_Web_Muhasebe.ViewModel.EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}
@inject LanguageService language

<section id="services" class="services">
    <div class="container" data-aos="fade-up">
        <div class="registration-form">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label class="row" style="justify-content:center; padding: 5%; color:white">@language.Getkey("Kullanıcı")</label>
                <div class="form-group row">
                    <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Id" disabled class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Email" class="form-control">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="UserName" class="form-control">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="AdminEditBtn">Kaydet</button>
                        <a asp-action="Index" style="color: white" >@language.Getkey("Geri Dön")</a>
                    </div>
                </div>
            </form>
        </div>

        <div class="registration-form">
            <div class="card" style="background: linear-gradient(to right, #ffffff, #343434); text-align: center; ">
                <div class="card-header">
                    <h3>User Roles</h3>
                </div>
                <div class="card-body">
                    @if (Model.Roles.Any())
                    {
                        foreach (var role in Model.Roles)
                        {
                            <h5 class="card-title">@role</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">None at the moment</h5>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="ManageUserRoles" style="width:auto" class="AdminEditBtn" asp-route-id="@ViewBag.userID">
                        Manage Roles
                    </a>
                </div>
            </div>
        </div>

    </div>
</section>





















