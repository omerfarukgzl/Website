@model G191210068_Web_Muhasebe.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete";
}
@inject LanguageService language
<section id="services" class="services">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>@language.Getkey("Sil")</h2>
            <h3>@language.Getkey("Kullanıcı")<span>@language.Getkey("Sil")</span></h3>
            <p>@language.Getkey("Silmek İstedğinize Eminmisiniz")</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
                <div class="icon-box">
                        <div class="icon"><i class="bx bx-file"></i></div>
                        <h4>Kullanıcı Adı</h4>
                        <dl class="row">
                            <dt class="col-sm-2">
                                Kullanıcı Adı
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.UserName)
                            </dd>
                            <dt class="col-sm-2">
                                Email
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Email)
                            </dd>
                            <dt class="col-sm-2">
                                Id
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Id)
                            </dd>
                            <dt class="col-sm-2">
                                Rol
                            </dt>
                            <dd class="col-sm-10">
                                @foreach (var item in ViewBag.role)
                                {
                                    @item;
                                }
                            </dd>
                        </dl>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="@language.Getkey("Sil")" class="SilBtn" /> |
                            <a asp-action="Index">@language.Getkey("Geri Dön")</a>
                        </form>
                </div>
            </div>
        </div>
    </div>
</section>
