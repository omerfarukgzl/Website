@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Create";
}
@inject LanguageService language

<section id="services" class="services">
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h3>@language.Getkey("Rol")<span>@language.Getkey("Ekle")</span></h3>
            <p>@language.Getkey("Yeni Rol Eklyebeilirisiniz")</p>
        </div>
        <div class="registration-form">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <input type="submit" value="@language.Getkey("Oluştur")" class="btn btn-primary" />
                        <a asp-action="Index" style="color: white">@language.Getkey("Geri Dön")</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>






