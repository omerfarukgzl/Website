                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="Borc" class="control-label"></label>
                    <input asp-for="Borc" class="form-control" />
                    <span asp-validation-for="Borc" class="text-danger"></span>
