                <label asp-for="Grup" class="control-label"></label>
                <select asp-for="Grup" asp-items="Html.GetEnumSelectList<Grup>()" class="form-control"></select>
                <span asp-validation-for="Grup" class="text-danger"></span>
            </div>
            @if (ViewBag.userId != null)
            {
                <input asp-for="UserId" value="@ViewBag.userId" class="form-control" hidden />
            }
            <div class="form-group">
                <input type="submit" value="@language.Getkey("Cari Oluştur")" class="btn btn-primary" />
            </div>
        </form>
    </div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
