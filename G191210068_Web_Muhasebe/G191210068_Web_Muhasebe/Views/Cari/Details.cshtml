@model G191210068_Web_Muhasebe.Models.Cari
@using G191210068_Web_Muhasebe.Components
@{
    ViewData["Title"] = "Details";
}
@inject LanguageService language
<section id="services" class="services">
    <div class="container" data-aos="fade-up" style="max-width: 100%">

        <div class="section-title">
            <h2>@language.Getkey("Cari Detay")</h2>
            <h3>@language.Getkey("Cari Detay")<span>@language.Getkey("Cari İşlem")</span></h3>
            <p>@language.Getkey("Cari Detayını ve Cari İşlemleri Kontrol Edebilirsiniz")</p>
        </div>

        <div class="row ">
            <div class="col-lg-2 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100" style="justify-content:center">
                <div class="icon-box">
                    <div class="icon"><i class="bx bx-file"></i></div>
                    <h4>@Html.DisplayFor(model => model.FirmaAdi)</h4>
                    <table class="table" style="min-width:300px; word-break:break-word;">
                        <tbody>

                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Aciklama)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Aciklama)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.ToplamBorc)
                                </td>
                                <td>
                                    @{
                                        var donusumlu_deger_ToplamBorc = string.Format("{0:0,0.000}", Model.ToplamBorc);
                                    }
                                    @donusumlu_deger_ToplamBorc
                                    @*@Html.DisplayFor(model => model.ToplamBorc)*@
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.ToplamAlacak)
                                </td>
                                <td>
                                    @{
                                        var donusumlu_deger_ToplamAlacak = string.Format("{0:0,0.000}", Model.ToplamAlacak);
                                    }
                                    @donusumlu_deger_ToplamAlacak
                                    @*@Html.DisplayFor(model => model.ToplamAlacak)*@
                                </td>
                            </tr>
                        </tbody>
                    </table>


                    <div class="row-cols-lg-2">
                        <a asp-controller="CariIslemler" class="CariIslemBtn" asp-action="OdemeYap" asp-route-id="@Model.CariID">@language.Getkey("Cariye Ödeme Yap")</a>
                    </div>
                    <div class="row-cols-lg-2">
                        <a asp-controller="CariIslemler" class="CariIslemBtn" asp-action="Alacaklandir" asp-route-id="@Model.CariID">@language.Getkey("Cariyi Alacaklandır")</a>
                    </div>
                    <div class="row-cols-lg-2">
                        <a asp-controller="CariIslemler" class="CariIslemBtn" asp-action="Borclandir" asp-route-id="@Model.CariID">@language.Getkey("Cariyi Borçlandır")</a>
                    </div>
                    <div class="row-cols-lg-2">
                        <a asp-controller="Cari" class="CariIslemBtn" asp-action="TarihSec" asp-route-PdfId="2" asp-route-id="@Model.CariID">@language.Getkey("Cari İşlemleri Raporu")</a>@* Cari Ve İşlemleri*@
                    </div>
                        @*<div class="row-cols-lg-2">
                            <a asp-controller="Cari" class="CariIslemBtn" asp-action="TarihSec" asp-route-id="@Model.CariID">@language.Getkey("Cari İşlemleri Raporu")</a>
                        </div>*@
                        <div class="row-cols-lg-1">
                            <a asp-action="Edit" asp-route-id="@Model.CariID">@language.Getkey("Düzenle")</a> |
                            <a asp-action="Index">@language.Getkey("Geri Dön")</a>
                        </div>
                    </div>
            </div>
            <div class="col-lg-10 col-md-12">
                @await Component.InvokeAsync("Cari_CariIslemler", new { id = Model.CariID })
            </div>
        </div>
</section><!-- End Services Section -->









