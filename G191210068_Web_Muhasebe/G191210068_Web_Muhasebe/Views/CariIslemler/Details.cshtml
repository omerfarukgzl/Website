            <h3>@language.Getkey("Cari İşlem Detay") <span>@language.Getkey("Ürün")</span></h3>
            <p>@language.Getkey("Cari İşlem Detayını ve Ürünleri Kontrol Edebilirsiniz")</p>
        </div>
        @if (Model.islemTuru == IslemTuru.Alis || Model.islemTuru == IslemTuru.Satis)
