                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.VadeTarihi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.VadeTarihi)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Saat)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Saat)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.odemeSekli)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.odemeSekli)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.EvrakNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.EvrakNo)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Aciklama)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Aciklama)
                                    </td>
                                </tr>
                                <tr>
