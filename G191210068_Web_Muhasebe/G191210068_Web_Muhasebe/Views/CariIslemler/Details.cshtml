                                        @Html.DisplayNameFor(model => model.Borc)
                                    </td>
                                    <td>
                                        @{
                                            var donusumlu_deger_Borc = string.Format("{0:0,0.000}", Model.Borc);
                                        }
                                        @donusumlu_deger_Borc
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Alacak)
                                    </td>
                                    <td>
                                        @{
                                            var donusumlu_deger_Alacak = string.Format("{0:0,0.000}", Model.Alacak);
                                        }
                                        @donusumlu_deger_Alacak
                                    </td>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.islemTuru)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.islemTuru)
                                    </td>

                                </tr>

                            </tbody>
                        </table>
                        <div>
                            <a asp-controller="Urun" class="btn btn-dark" asp-action="Create" asp-route-id="@Model.CariIslemlerID">Ürün Ekle</a>
                            <a asp-controller="CariIslemler" asp-action="Delete" style="width: 60px; justify-content: center;" asp-route-id="@Model.CariIslemlerID" class="SilBtn">@language.Getkey("Sil")</a>
                        </div>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.CariIslemlerID">@language.Getkey("Düzenle")</a> |
                            <a asp-controller="Cari" asp-action="Details" asp-route-id="@Model.CariId">@language.Getkey("Geri Dön")</a>

                        </div>
                    </div>
                </div>
                @await Component.InvokeAsync("CariIslemler_Urun", new { id = Model.CariIslemlerID });
