            <div class="row ">
                <div class="col-lg-3 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100" style="justify-content:center">
                    <div class="icon-box">
                        <div class="icon"><i class="bx bx-file"></i></div>
                        <h4>@Html.DisplayFor(model => model.FaturaTarihi)</h4>
                        <table class="table" style="min-width:300px; word-break:break-word;">
                            <tbody>
                                <tr>
                                    <td style="background-color: #D9EAF7">
                                       Sağdaki İşlemler Öncesi Bakiye
                                    </td>
                                    <td style="background-color: #ffc6c6; font-size: 25px; ">
                                        @{
                                            var donusumlu_deger_SonBakiye = string.Format("{0:0,0.000}", Model.SonDurum);
                                        }
                                        @donusumlu_deger_SonBakiye
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.FaturaTarihi)
